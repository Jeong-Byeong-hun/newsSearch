<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackimage"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <EditText
        android:id="@+id/searchWord"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="216dp"
        android:background="@null"
        android:gravity="left"
        android:hint="검색어 입력"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/pageChange1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pageChange1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:background="@null"
        android:onClick="getNaverSearch"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/searchWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchWord" />

</android.support.constraint.ConstraintLayout>